.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 140rpx 0;
  box-sizing: border-box;
} 
.MainBtn {
  margin: 0 auto;
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 50px; 
  padding-right: 50px;
}


/**common.wxss**/
.containerMid {
  transform: matrix3d(1,0,0.00,0,0.00,1,0.00,0,0,0,1,0,0,0,0,1);
}

.containerLeft {
  height: 100%;
  transform: matrix3d(.1, 0, 0.00, 0.001, 0.00, 1, 0.00, 0, 0, 0, 1, 0, -150, 0, 0, 1);
}

