.page {
  min-height: 100%;
  flex: 1;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  overflow: hidden;
}

.page_swiper {
  padding-bottom: 20px;
}
.form {
  display: flex;
  flex-direction: row;
  border-top: 0.1rpx double #ededed;
  justify-content: space-between;
  align-items: center;
  
}
.game {
  display: flex;
  flex-direction: row;
  padding-left: 10px;
  padding-right: 10px;
  align-items: center;
  
}

.info {
  display: flex;
  flex-direction: column;
}
.Dbtn {
  margin-right: 20rpx;
}
.swiper-item {
  display: block;
  border-radius: 10rpx;
  height: 150px;
}

.flex {
  display: flex;
  flex-direction: row;
  padding-left: 10px;
  padding-right: 10px;
}

.flex1 {
  display: flex;
  flex-direction: row;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 20px;
}

.tab-item {
  width: 33.3%;
  font-size: 22rpx;
  text-align: center;
  color: grey;
}

.pic {
  display: flex;
  border-radius: 6rpx;
  margin: 15px 15px 15px 5px;
}

.h1 {
  font-size: 33rpx;
  font-weight: 400;
  margin-bottom: 6rpx;
}

.h2 {
  font-size: 29rpx;
  font-weight: 300;
  margin-bottom: 4rpx;
  color: #808080
}
.h3 {
  font-weight: 200;
  font-size: 27rpx;
  margin-bottom: 4rpx;
  color: #c9c9c9;
}

.bc_green {
  background-color: #09bb07;
}

.bc_red {
  background-color: #f76260;
}

.bc_blue {
  background-color: #10aeff;
}

.bc_yellow {
  background-color: #ffbe00;
}

.bc_gray {
  background-color: #c9c9c9;
}
